@model IEnumerable<Domain.Entities.Project>

@{
    ViewBag.Title = "Список инвестпроектов";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData.ContainsKey("sucess"))
    {
        <p class="bg-success">@TempData["sucess"]</p>
    }
    <h2>Список инвестпроектов</h2>

    <p>
        @Html.ActionLink("Создать новый проект", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descr)
            </th>
            <th>
                Число ip - камер
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descr)
                </td>
                <td>
                    @item.IpCams.Count()
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.ProjectID }) |
                    @Html.ActionLink("Подробно", "Details", new { id = item.ProjectID }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.ProjectID })
                </td>
            </tr>
        }

    </table>
</div>